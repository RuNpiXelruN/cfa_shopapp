<p id="notice"><%= notice %></p>

<h1 class="container productindex-header">Your Products</h1>

<div class="container product-index-links">
  <%= link_to 'New Product', new_product_path %>
</div>

<div class="container">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <div class="card">
        <img class="card-img-top" src="<%= product.image_url %>" alt="Card image cap", width="100%">
        <div class="card-block">
          <h4 class="card-title"><%= link_to product.name, product %><span class="label label-default"><%= product.brand %></span></h4>
          <p class="card-text"><%= product.description %></p>
          <a href="#" class="btn btn-success"><i class="fa fa-cart-plus"></i>Buy now</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
