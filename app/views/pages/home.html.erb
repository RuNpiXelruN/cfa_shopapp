<h1>J Shop</h1>

<% @products.each do |product| %>
  <div class="col-md-4">
    <div class="card">
      <img class="card-img-top" src="<%= product.image %>" alt="Card image cap", width="100%">
      <div class="card-block">
        <h4 class="card-title"><%= link_to product.name, product %><span class="label label-default"><%= product.brand %></span></h4>
        <p class="card-text"><%= product.description %></p>
        <a href="#" class="btn btn-success"><i class="fa fa-cart-plus"></i>Buy now</a>
      </div>
    </div>
  </div>
<% end %>
